#include <stdio.h>
#include <math.h>
#include "gfx4.h"
#include "titlescreenfunc.h"

int main ()
{
	char c;
	int X, Y, check;
	// int xsize = 400, ysize = 750, minixsize = 400, miniysize = 750;
	int xsize = 800, ysize = 800, minixsize = 400, miniysize = 750;
	int treasure;

	gfx_open(xsize, ysize, "YoHo: A Pirate's Life");
	printTitleScreen(xsize, ysize);
	
	while(1)
	{
		c = gfx_wait();
			
		switch (c)
		{
			case 1:
				X = gfx_xpos();
				Y = gfx_ypos();
				check = checkZone(X, Y);
				switch (check)
				{
					case 0: // Quit
						return 0;
						break;
					case 1: // Attack
					case 2: // Treasure
						playGame(minixsize, miniysize, check);
						break;
					case 3: // Rum
						drinkRum();
						break;
				}
				break;
		}
		printTitleScreen(xsize, ysize);
	}
	
	return 0;
}
